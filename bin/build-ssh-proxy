#!/bin/bash

set -euo pipefail

GIT_ROOT=${GIT_ROOT:-$(git rev-parse --show-toplevel)}
. "${GIT_ROOT}/bin/include/versioning"

BASEDIR="$(cd "$(dirname "$0")/.." && pwd)"
set -v
CGO_ENABLED=0 go build -o "${BASEDIR}/binaries/ssh-proxy" -ldflags="-X github.com/SUSE/ssh-proxy/version.Version=${ARTIFACT_VERSION}" $BASEDIR/cmd/ssh-proxy/main.go
